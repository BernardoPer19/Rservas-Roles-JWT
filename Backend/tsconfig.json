{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",

    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    // üí• M√°xima rigurosidad en el tipado
    "strict": true,
    "strictNullChecks": true,             // ‚ùó No permite null/undefined sin control
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true, // ‚ùó Asegura inicializaci√≥n de props en clases
    "noImplicitThis": true,               // ‚ùó this debe estar tipado

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    "noEmitOnError": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
